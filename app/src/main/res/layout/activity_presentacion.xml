<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="alberto.local.quecomer.Presentacion">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        android:layout_weight="2"
        android:text="Que comer!!"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorPanda"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_weight="5"
        android:theme="@style/AppTheme"
        android:src="@drawable/recetario_3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_curvo"
            android:text="Iniciar"
            android:onClick="iniciar_buscador"
            android:layout_marginHorizontal="5dp"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginHorizontal="5dp"
            android:onClick="mostrarAyuda"
            android:background="@drawable/boton_curvo"
            android:text="Ayuda"/>

    </LinearLayout>

</LinearLayout>
